<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jshop.Views.LanguageView">
        <ContentPage.Content>
            <StackLayout>
                <Button Text="Ingles"
                        Command="{Binding ChangeEnglishLanguageCommand}"
                        HorizontalOptions="Center"
                        VerticalOptions="CenterAndExpand" />

                <Button Text="Español"
                        Command="{Binding ChangeSpanishLanguageCommand}"
                        HorizontalOptions="Center"
                        VerticalOptions="CenterAndExpand" />
            </StackLayout>
         </ContentPage.Content>
</ContentPage>