<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jshop.Views.MenuView">
    <ContentPage.Content>
    <Grid ColumnSpacing="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>
            
        <Grid Grid.Column="0" BackgroundColor="Chocolate" />
        
        <Grid Grid.Column="1" RowSpacing="0"> 
                
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="8*" />
            </Grid.RowDefinitions>
                
            <StackLayout Grid.Row="0" BackgroundColor="Aquamarine">

            </StackLayout>
                
            <ListView
            Grid.Row="1"
            BackgroundColor="White"
            SelectedItem="{Binding MenuSelectItem, Mode=TwoWay}"
            ItemsSource="{Binding Menu, Mode=TwoWay}"
            RowHeight="55"
            SeparatorVisibility="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                
                                <Image 
                                    Grid.Column="0"
                                    Source="{Binding Icon}" />
                                <Label
                                    Grid.Column="1"
                                    Text="{Binding Title, Mode=TwoWay}"
                                    TextColor="Red"
                                    VerticalOptions="Center" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>    
     </Grid>
    </ContentPage.Content>
</ContentPage>